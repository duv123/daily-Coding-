#include<iostream>
#include<algorithm>
#include<string>
using namespace std;

int main()
{
    int n;
    cin >> n;
    string s;
    cin >> s;
    string ans;
    ans +=s[0];
    int j=2;
    for(int i=1; i<n; )
    {
        ans+=s[i];
        i = i+j;
        j++;
    }
    cout << ans << endl;
}
